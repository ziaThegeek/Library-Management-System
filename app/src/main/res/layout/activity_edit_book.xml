<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_book"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Book Details"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/purple_500"
        android:fontFamily="serif"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/purple_500"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="10sp"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:hint="Title"
        android:textSize="15sp"
        android:padding="10sp"
        android:id="@+id/book_name"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auther:"
            android:textColor="@color/purple_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10sp"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:hint="Auther"
            android:textSize="15sp"
            android:padding="10sp"
            android:id="@+id/auther_name"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isbn No:"
            android:textColor="@color/purple_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10sp"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:hint="isbn No"
            android:textSize="15sp"
            android:padding="10sp"
            android:id="@+id/isbn_no"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Published year:"
            android:textColor="@color/purple_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10sp"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:hint="Published year"
            android:textSize="15sp"
            android:padding="10sp"
            android:id="@+id/year"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of Pages:"
            android:textColor="@color/purple_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10sp"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:hint="No of pages"
            android:textSize="15sp"
            android:padding="10sp"
            android:id="@+id/pages"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15sp"
            android:padding="10sp"
            android:text="cancel"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            app:backgroundTint="#fff"
            android:id="@+id/cancel"
            android:drawableRight="@drawable/cancel"

            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
     android:paddingHorizontal="20sp"
        android:layout_margin="1sp"
        android:text="Apply Changes"
        android:id="@+id/update_book"
        android:drawableRight="@drawable/check"
        android:paddingVertical="10sp"
        />
    </LinearLayout>
</LinearLayout>