<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/label_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8sp"
            android:layout_toLeftOf="@id/label_call_no"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="left"
            android:lines="1"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold|italic"

            />

        <TextView
            android:id="@+id/label_call_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:ems="12"
            android:gravity="right"
            android:lines="1"
            android:text="Call No "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginRight="30sp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8sp"
            android:layout_toLeftOf="@id/call_no_title"
            android:ellipsize="end"
            android:ems="1"
            android:gravity="left"
            android:lines="1"
            android:text="Introdction to computer science and engineering"
            android:textColor="@color/purple_500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/call_no_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginRight="20sp"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="right"
            android:lines="1"
            android:text="`00001"
            android:textColor="@color/purple_500"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/label_book_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8sp"
            android:layout_toLeftOf="@id/label_book_publisher"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="left"
            android:lines="1"
            android:text="ISBN No."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold|italic"

            />

        <TextView
            android:id="@+id/label_book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:ems="12"
            android:gravity="right"
            android:lines="1"
            android:text="Auther"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginRight="30sp"

            />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/isbn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8sp"
            android:layout_toLeftOf="@id/book_auhter"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="left"
            android:lines="1"
            android:text="12.aa.32"
            android:textSize="12sp"
            android:textColor="@color/purple_500"

            />

        <TextView
            android:id="@+id/book_auhter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="right"
            android:lines="1"
            android:text="Nelson mandela"
            android:textColor="@color/purple_500"
            android:textSize="12sp" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"

    >

    <LinearLayout
        android:id="@+id/edit_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Book"
            android:textColor="@color/purple_500"
            android:textSize="12sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp"
        android:orientation="vertical"
        android:id="@+id/delete_book"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Book"
            android:textColor="@color/purple_500"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical"
        android:id="@+id/issue_book"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/issued_book" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue to Student"
            android:textColor="@color/purple_500"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
</LinearLayout>