<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD122D4E"
    tools:context=".Data.splash_activity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@id/dplash_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/uet_logo_00"
        android:scaleType="centerCrop"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dplash_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="163dp"
        android:gravity="center"
        android:text="University of Engineering \nand Technology Lahore \n Narowal Campus"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/dplash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="-60sp"
        android:padding="10sp"
        android:text="Library Management System "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Developed By PCDSoft"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
android:id="@+id/bottom_text"
            android:padding="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>
</RelativeLayout>